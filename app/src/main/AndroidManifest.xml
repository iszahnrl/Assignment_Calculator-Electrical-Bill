<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/orange_calculator"
        android:label="Electrical Calculator"
        android:roundIcon="@drawable/orange_calculator"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElectricCalculator"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AboutActivity declaration -->
        <activity
            android:name=".AboutActivity"
            android:exported="true"
            android:theme="@style/Theme.ElectricCalculator">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- InstructionActivity declaration -->
        <activity
            android:name=".InstructionActivity"
            android:exported="true"
            android:theme="@style/Theme.ElectricCalculator">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>